<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/card"
        android:backgroundTint="@color/blue"
        android:orientation="horizontal">

        <!-- Assuming you have a Button and a TextView in your layout -->
        <Button
            android:id="@+id/yourButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="18dp"
            android:background="@drawable/button_shape_blue"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/baseline_mic_black_36"
            android:drawableTint="@color/blue"
            android:padding="22dp"
            android:text="@string/start"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/clockTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:gravity="right"
                    android:paddingRight="12dp"
                    android:text="00 : 00 : 00"
                    android:textColor="#eee"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/shareButton"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_margin="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="sharePDF"
                    android:src="@drawable/baseline_print_white_24" />

            </LinearLayout>

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="000"
                android:textColor="@color/white"
                android:textSize="55sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="88sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeTextType="uniform" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="68dp"
            android:orientation="vertical">

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp" />

            <TableLayout
                android:id="@+id/speechLogTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginTop="24dp"
                android:stretchColumns="*">

                <!-- Header Row -->
                <TableRow>

                    <TextView
                        android:background="@color/blue"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/s_no"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:background="@color/blue"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/heart_rate"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:background="@color/blue"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/time"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </TableRow>

                <!-- Data Rows will be added dynamically in code -->

            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Floating Action Button -->
    <Button
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button_background"
        android:text="  FINISH  "
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="16dp"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/check_24px"
        android:drawableTint="@android:color/white"
        android:gravity="center"/>
</RelativeLayout>
